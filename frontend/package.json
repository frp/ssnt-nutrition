  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.20",
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^20.3.7",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19"
  }
}
